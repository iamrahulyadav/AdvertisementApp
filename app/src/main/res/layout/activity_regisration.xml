<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.projects.owner.camlocation.Activities.RegisrationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logobig" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="70dp"
            android:orientation="vertical">

            <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_below="@+id/relativeLayout"
            android:background="@drawable/underline"
            android:drawableLeft="@drawable/ic_account_circle_white_24dp"
            android:drawablePadding="5dp"
            android:hint="Username"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textColor="@android:color/primary_text_dark"
            android:textColorHint="@android:color/primary_text_dark"
            android:textSize="15sp" />
            <EditText
                android:id="@+id/et_number"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_below="@+id/relativeLayout"
                android:background="@drawable/underline"
                android:drawableLeft="@drawable/ic_account_circle_white_24dp"
                android:drawablePadding="5dp"
                android:hint="Number"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="@android:color/primary_text_dark"
                android:textColorHint="@android:color/primary_text_dark"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/etun"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_below="@+id/relativeLayout"
                android:background="@drawable/underline"
                android:drawableLeft="@drawable/ic_account_circle_white_24dp"
                android:drawablePadding="5dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="@android:color/primary_text_dark"
                android:textColorHint="@android:color/primary_text_dark"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etpas"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etun"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/underline"
                android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
                android:drawablePadding="5dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingRight="7dp"
                android:singleLine="true"
                android:textColor="@android:color/primary_text_dark"
                android:textColorHint="@android:color/background_light"
                android:textSize="15sp" />

            <com.dd.morphingbutton.MorphingButton
                android:id="@+id/btnMorph1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mb_height_56"

                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:text="Confirm"
                android:textColor="@color/mb_white" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
